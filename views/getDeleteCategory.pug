extends layout 

block content 
    h1= title 
    hr
    if items.length === 0
        form(action="", method="POST")
            input(type="submit", value="Delete")
    else 
        h2 There are still items in this category. Delete them first.
            ul 
                each item in items 
                    a(href=item.url) #{item.name}
                    br